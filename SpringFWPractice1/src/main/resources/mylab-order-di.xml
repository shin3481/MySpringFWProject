<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

<!-- values.prorperties 파일위치를 설정하기 -->
<context:property-placeholder location="classpath:values.properties"/>
<!-- setter injection -->
<bean id='product1' class="mylab.order.di.xml.Product" >
<property name="id" value="${practice1_1}"></property>
<property name="name" value="${practice1_2}"></property>
<property name="price" value="${practice1_3}"></property>

</bean>
<!-- constructor injection -->
<bean id='product2' class="mylab.order.di.xml.Product">
<constructor-arg index="0" value="${practice1_4}" />
<constructor-arg index="1" value="${practice1_5}" />
<constructor-arg index="2" value="${practice1_6}" />
</bean>

<bean id='shoppingCart' class="mylab.order.di.xml.ShoppingCart">
	<property name="products">
	    <list>
	        <ref bean="product1" />
	        <ref bean="product2" />
	    </list>
	</property>
</bean>
<bean id='orderService' class="mylab.order.di.xml.OrderService">
	<property name="shoppingCart" ref="shoppingCart" />

</bean>
</beans>
